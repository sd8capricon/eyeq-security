---
// import OwlCarousel
import "../lib/owlcarousel/assets/owl.carousel.min.css";
// import animate.js
import "../lib/animate/animate.min.css";
// Boostrap
import "../styles/bootstrap.min.css";
// Styles
import "../styles/style.css";

// Components
import Spinner from "../components/Layout/Spinner.astro";
import Topbar from "../components/Layout/Topbar.astro";
import Navbar from "../components/Layout/Navbar.astro";
import Footer from "../components/Layout/Footer.astro";
---

<!doctype html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>Startup - Startup Website Template</title>
		<meta content="width=device-width, initial-scale=1.0" name="viewport" />

		<!-- Favicon -->
		<link href="img/favicon.ico" rel="icon" />

		<!-- Google Web Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800&family=Rubik:wght@400;500;600;700&display=swap"
			rel="stylesheet"
		/>

		<!-- Icon Font Stylesheet -->
		<link
			href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
			rel="stylesheet"
		/>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
			rel="stylesheet"
		/>
	</head>
	<body>
		<!-- Spinner Start -->
		<Spinner />
		<!-- Spinner End -->

		<!-- Topbar Start -->
		<Topbar />
		<!-- Topbar End -->

		<!-- Navbar Start-->
		<Navbar />
		<!-- Navbar End -->

		<slot />

		<!-- Footer Start -->
		<Footer />
		<!-- Footer End -->

		<!-- JavaScript Libraries -->
		<script is:inline src="https://code.jquery.com/jquery-3.4.1.min.js"
		></script>
		<script
			is:inline
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"
		></script>
		<script is:inline src="/lib/wow/wow.min.js"></script>
		<script is:inline src="/lib/easing/easing.min.js"></script>
		<script is:inline src="/lib/waypoints/waypoints.min.js"></script>
		<script is:inline src="/lib/counterup/counterup.min.js"></script>
		<script is:inline src="/lib/owlcarousel/owl.carousel.min.js"></script>

		<!-- Template Javascript -->
		<script is:inline src="/js/main.js"></script>
	</body>
</html>
