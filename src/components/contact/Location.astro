---
interface Props {
    position: number;
    city: string;
    address?: string;
    email: string;
    phone: string;
}

let { position, city, address, phone, email } = Astro.props as Props;

let city_split = city.split(", ");
let city2 = city_split[0];
let province = city_split[1];
---

<style>
    .location h4 {
        text-transform: uppercase;
    }
    .location h4 span {
        padding: 1.15rem;
        height: 1px;
        width: 1px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #000;
        border-radius: 9999px;
        margin-right: 10px;
    }
    .location address {
        list-style: none;
    }
    .location li i {
        margin-right: 0.5rem;
    }
    .location a {
        background-color: #f2c202;
        color: #000;
        padding: 0.75rem;
    }
</style>

<div class="location">
    <h4 class="d-flex align-items-center">
        <span>{position}</span>{city}
    </h4>
    <address class="ps-5">
        {
            address && (
                <li>
                    <i class="fa fa-map" />
                    {address}
                </li>
            )
        }
        <li>
            <i class="fa fa-phone-alt"></i>
            {phone}
        </li>
        <li class="mb-4">
            <i class="fa fa-envelope-open"></i>
            {email}
        </li>
        <li>
            <a
                href={`/contact/#map-${province}`}
                class="location-btn"
                id={city}
                data-province={province}
                data-city={city2}
            >
                <i class="fa fa-map-marker-alt"></i>View Location
            </a>
        </li>
    </address>
</div>
