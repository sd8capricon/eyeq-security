---
interface Props {
    topic: string;
    thumbnail: string;
    title: string;
    author: string;
    date: string;
    content_preview: string;
}
const props = Astro.props as Props;
---

<div class="blog-item bg-cosmic-latte rounded overflow-hidden">
    <div class="blog-img position-relative overflow-hidden">
        <img class="img-fluid" src={props.thumbnail} alt="" />
        <a
            class="position-absolute top-0 start-0 bg-primary text-white rounded-end mt-5 py-2 px-4"
            href="">{props.topic}</a
        >
    </div>
    <div class="p-4">
        <div class="d-flex mb-3">
            <small class="me-3"
                ><i class="far fa-user text-primary me-2"></i>{
                    props.author
                }</small
            >
            <small
                ><i class="far fa-calendar-alt text-primary me-2"></i>{
                    props.date
                }</small
            >
        </div>
        <h4 class="mb-3">{props.title}</h4>
        <p>
            {props.content_preview}
        </p>
        <a class="text-uppercase" href=""
            >Read More <i class="bi bi-arrow-right"></i></a
        >
    </div>
</div>
