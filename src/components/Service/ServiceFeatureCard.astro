---
import type { ServiceFeature } from "../../types";

interface Props extends ServiceFeature {}

const { feature, description, height } = Astro.props as Props;
---

<div>
    <div class="feature" style={`height: ${height}px;`}>
        <h4 class="sidebar">{feature}</h4>
        <p>
            {description}
        </p>
    </div>
</div>

<style>
    .feature {
        position: relative;
        /* height: 225px; */
        margin-bottom: 20px;
        padding: 15px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .feature h4 {
        margin: 5px 0 10px 0;
    }

    .feature h4.sidebar {
        margin-bottom: 1rem;
        text-transform: capitalize;
        position: relative;
        padding-left: 15px;
    }
    .feature h4.sidebar::before {
        content: "";
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        width: 5px;
        background-color: #f2c202;
    }

    .feature p {
        margin: 0;
        line-height: 1.6;
    }

    @media screen and (max-width: 768px) {
        .feature {
            height: fit-content !important;
        }
    }
</style>
