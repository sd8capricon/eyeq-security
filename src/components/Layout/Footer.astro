<style>
    .footer {
        background-color: #000;
        color: #fff;
        padding: 40px 0;
    }
    .footer h5 {
        color: #fff;
        font-weight: bold;
        margin-bottom: 20px;
    }
    .footer ul {
        list-style: none;
        padding: 0;
    }
    .footer ul li {
        margin-bottom: 0.5rem;
        transition: 0.25s ease;
    }
    .footer ul li:hover {
        transform: translateX(10px);
    }
    .footer ul li a {
        color: #b0b0b0;
        text-decoration: none;
    }
    .footer ul li a:hover {
        color: #f2c202;
    }
    .footer .footer-logo {
        /* font-size: 24px; */
        color: var(--primary);
        font-weight: bold;
        margin-bottom: 20px;
    }
    .footer .footer-logo img {
        height: 100px;
        width: auto;
    }

    .footer .footer-newsletter {
        width: 300px;
        margin-left: auto;
        margin-right: auto;
    }

    .footer .contact-info {
        font-size: 14px;
    }
    .footer .contact-info i {
        color: #f2c202;
        margin-right: 10px;
    }
    .footer-bottom {
        border-top: 1px solid #444;
        padding-top: 20px;
        margin-top: 20px;
        text-align: center;
    }
</style>
