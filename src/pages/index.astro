---
// Layout
import RootLayout from "../layouts/RootLayout.astro";

// Components
import SectionTitle from "../components/Layout/SectionTitle.astro";
import SecttionTitleAlternate from "../components/Layout/SectionTitleAlternate.astro";
import Section from "../layouts/Section.astro";
import Button from "../components/Layout/Button.astro";
import FactCard from "../components/Home/FactCard.astro";
import Feature from "../components/Home/Feature.astro";
// Sections
import FullScreenSearch from "../components/Layout/FullScreenSearch.astro";
import Testimonial from "../components/Testimonial/Testimonial.astro";
import Quote from "../components/Layout/Quote.astro";
import BlogRow from "../components/Layout/BlogRow.astro";
import ServiceCard from "../components/Home/ServiceCard.astro";
---

<RootLayout>
    <style>
        .hero .hero-left {
            text-transform: capitalize;
        }
    </style>
    <!-- Hero Start -->
    <div class="container-fluid position-relative p-0">
        <div class="row m-0 w-100 hero">
            <div
                class="col-lg-5 bg-raisin-black p-5 d-flex align-items-center hero-left"
            >
                <div>
                    <h1 class="text-light mb-5">
                        Pioneers In Industry for over a decade
                    </h1>
                    <Button href="/">Request A Quote</Button>
                </div>
            </div>
            <div class="col-lg-7 p-0 hero-right">
                <img
                    class="w-100"
                    alt=""
                    src="https://picsum.photos/seed/idk/800/600"
                />
            </div>
        </div>
    </div>
    <!-- Hero End -->

    <!-- Full Screen Search Start -->
    <FullScreenSearch />
    <!-- Full Screen Search End -->

    <!-- Facts Start -->
    <div class="container-fluid facts py-5 pt-lg-0">
        <div class="container py-5 pt-lg-0">
            <div class="row gx-0">
                <FactCard
                    icon="fa-users"
                    title="Happy Customers"
                    value={12345}
                />
                <FactCard
                    icon="fa-check"
                    title="Happy Employees"
                    variant="light"
                    value={1235}
                />
                <FactCard
                    icon="fa-award"
                    title="Highly Experienced<br/> Management"
                    value={1235}
                />
                <FactCard
                    icon="fa-award"
                    title="Awards for Quality<br/> Services"
                    variant="light"
                    value={12345}
                />
            </div>
        </div>
    </div>
    <!-- Facts Start -->

    <!-- About Start -->
    <Section>
        <div class="row g-5">
            <div class="col-lg-7">
                <SectionTitle
                    top="About Us"
                    main="EyeQ Security Services"
                    offset
                />
                <p class="mb-4">
                    We are a 24-hour security & protection company that strives
                    to achieve client safety and protection, as well as to
                    protect your property and lives from threats and dangers.
                </p>
                <div class="row g-0 mb-3">
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.2s">
                        <h5 class="mb-3">
                            <div class="row g-0">
                                <i class="col-1 fa fa-check text-primary me-2"
                                ></i>
                                <span class="col-10">
                                    Offering Top-Notch Quality Services
                                </span>
                            </div>
                        </h5>
                        <h5 class="mb-3">
                            <div class="row g-0">
                                <i class="col-1 fa fa-check text-primary me-2"
                                ></i>
                                <span class="col-10">
                                    Friendly security- That keep your business
                                    safe
                                </span>
                            </div>
                        </h5>
                    </div>
                    <div class="col-sm-6 wow zoomIn" data-wow-delay="0.4s">
                        <h5 class="mb-3">
                            <div class="row g-0">
                                <i class="col-1 fa fa-check text-primary me-2"
                                ></i>
                                <span class="col-10"
                                    >Safeguarding the interests of our
                                    Stakeholders</span
                                >
                            </div>
                        </h5>
                        <h5 class="mb-3">
                            <div class="row g-0">
                                <i class="col-1 fa fa-check text-primary me-2"
                                ></i>
                                <span class="col-10"> Fair Prices </span>
                            </div>
                        </h5>
                    </div>
                </div>
                <div
                    class="d-flex align-items-center mb-4 wow fadeIn"
                    data-wow-delay="0.6s"
                >
                    <div
                        class="bg-primary d-flex align-items-center justify-content-center rounded"
                        style="width: 60px; height: 60px;"
                    >
                        <i class="fa fa-phone-alt text-black"></i>
                    </div>
                    <div class="ps-4">
                        <h5 class="mb-2">Call to ask any question</h5>
                        <h4 class="text-primary mb-0">+012 345 6789</h4>
                    </div>
                </div>
                <Button href="/contact">Request A Quote</Button>
                <Button href="/about" variant="outline-dark">
                    Read More
                </Button>
            </div>
            <div class="col-lg-5" style="min-height: 500px;">
                <div class="position-relative h-100">
                    <img
                        class="position-absolute w-100 h-100 rounded wow zoomIn"
                        data-wow-delay="0.9s"
                        src="https://picsum.photos/800/800"
                        style="object-fit: cover;"
                    />
                </div>
            </div>
        </div>
    </Section>
    <!-- About End -->

    <!-- Features Start -->
    <Section
        class="bg-gray"
        title_top="Why Choose Us"
        title_main="We Are Here to Grow Your Business Exponentially"
    >
        <div class="row g-5">
            <div class="col-lg-4">
                <div class="row g-5">
                    <Feature
                        feature_title="Clients First"
                        icon="fa-cubes"
                        description="Forever. We understand the way your facilities are managed is the way the world perceives you. Your requirements are our immediate priority. You come before anything else."
                        data_wow_delay="0.2s"
                    />
                    <Feature
                        feature_title="Integrity"
                        icon="fa-award"
                        description="Integrity is what you expect from us and what you will get. We deliver as assured."
                        data_wow_delay="0.6s"
                    />

                    <Feature
                        feature_title="Sustainablity"
                        icon="fa-phone-alt"
                        description="This world has limited resources. In our delivery, we practice sustainable methods. Your child will inherit a better world than you did. We are doing our bit for this."
                        data_wow_delay="1.0s"
                    />
                </div>
            </div>
            <div
                class="col-lg-4 wow zoomIn"
                data-wow-delay="0.9s"
                style="min-height: 350px;"
            >
                <div class="position-relative h-100">
                    <!-- Implement srcset for 800x800 -->
                    <img
                        class="position-absolute w-100 h-100 rounded wow zoomIn"
                        data-wow-delay="0.1s"
                        src="https://picsum.photos/seed/123/720/1280"
                        style="object-fit: cover;"
                    />
                </div>
            </div>
            <div class="col-lg-4">
                <div class="row g-5">
                    <Feature
                        feature_title="Employee Management"
                        icon="fa-users-cog"
                        description="A motivated employee delivers the best. Our internal work culture fosters teamwork and we ensure very high motivational levels among our employees. It shows in your satisfaction."
                        data_wow_delay="0.4s"
                    />
                    <Feature
                        feature_title="Customer Satisfaction"
                        icon="fa-award"
                        description="Your satisfaction is our guiding philosophy. For every mile, we will walk an extra mile."
                        data_wow_delay="0.8s"
                    />
                    <Feature
                        feature_title="Innovation"
                        icon="fa-phone-alt"
                        description="We are constantly looking for ways to deliver better and quicker. We invest in better technology and better training for our personnel. When you hire our services, you will notice the difference. To innovate is to inspire."
                        data_wow_delay="1.2s"
                    />
                </div>
            </div>
        </div>
    </Section>
    <!-- Features Start -->

    <!-- Service Start -->
    <Section class="services bg-primary" data_wow_delay="0.1s">
        <div class="row">
            <div class="col-12 col-md-4 services-left">
                <!-- SectionTitle -->
                <SecttionTitleAlternate
                    top="Our Services"
                    main="Our Top Notch Security Services"
                />
            </div>
            <div class="col-12 col-md-8 services-right">
                <div class="row gx-5">
                    <div class="col-12 col-md-6">
                        <ServiceCard />
                    </div>
                    <div class="col-12 col-md-6">
                        <ServiceCard />
                    </div>
                    <div class="col-12 col-md-6">
                        <ServiceCard />
                    </div>
                    <div class="col-12 col-md-6">
                        <div class="explore-more">
                            <h3>Explore More Services</h3>
                            <p>
                                Discover a wide range of services tailored to
                                your needs. Click to explore more and elevate
                                your experience with us.
                            </p>
                            <a href="#">→</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </Section>
    <!-- Service End -->

    <!-- Quote Start -->
    <Section>
        <Quote />
    </Section>
    <!-- Quote End -->

    <!-- Testimonial Start -->
    <Section
        title_top="Testimonial"
        title_main="What Our Clients Say About Our Digital Services"
    >
        <Testimonial />
    </Section>
    <!-- Testimonial End -->

    <!-- Blog Start -->
    <Section
        title_top="Latest Blog"
        title_main="Read The Latest Articles from Our Blog Post"
    >
        <BlogRow />
    </Section>
    <!-- Blog Start -->

    <!-- Vendor Start -->
    <Section title_top="Our Clients" title_main=" Businesses That Rely On Us">
        <div class="bg-white mt-5">
            <div class="owl-carousel vendor-carousel">
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
                <img src="https://picsum.photos/seed/idk/150/50" alt="" />
            </div>
        </div>
    </Section>
    <!-- Vendor End -->

    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square rounded back-to-top"
        ><i class="bi bi-arrow-up"></i></a
    >
</RootLayout>
